{
  "name": "@spartan-ui/select",
  "description": "Spartan Select React component library",
  "version": "0.2.2",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/select.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "author": {
    "name": "Spartan UI Team",
    "url": "https://github.com/spartan-ui"
  },
  "homepage": "https://github.com/spartan-ui/spartan-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/spartan-ui/spartan-ui.git",
    "directory": "packages/select"
  },
  "engines": {
    "node": ">=12",
    "yarn": ">=1"
  },
  "scripts": {
    "precommit": "lint-staged",
    "clean": "rimraf dist/",
    "generate": "yarn barrelsby --delete --directory src/ --exclude \"@types|setupTests|spec\" --singleQuotes",
    "prestart": "yarn clean && yarn generate",
    "start": "tsdx watch",
    "prebuild": "yarn clean && yarn generate",
    "build": "tsdx build",
    "lint": "yarn lint:js && yarn lint:scss",
    "lint:fix": "yarn lint:js --fix && yarn lint:scss --fix",
    "lint:js": "eslint --ext js,ts,tsx src",
    "lint:scss": "stylelint --aei src/**/*.scss",
    "test": "tsdx test --passWithNoTests",
    "prepare": "yarn build"
  },
  "peerDependencies": {
    "bootstrap": ">=4",
    "react": ">=16",
    "react-bootstrap": ">=1.0.0-beta.14",
    "react-select": ">=3"
  },
  "devDependencies": {
    "@testing-library/dom": "^6",
    "@testing-library/jest-dom": "^5",
    "@testing-library/react": "^9",
    "@testing-library/user-event": "^10",
    "@types/jest": "^25",
    "@types/react": "^16",
    "@types/react-dom": "^16",
    "@types/react-select": "^3",
    "@typescript-eslint/eslint-plugin": "^2",
    "@typescript-eslint/parser": "^2",
    "babel-eslint": "^10",
    "barrelsby": "^2",
    "eslint": "^6",
    "eslint-config-react-app": "^5",
    "eslint-plugin-flowtype": "^3",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^4",
    "lint-staged": "^10",
    "react": "^16",
    "react-dom": "^16",
    "react-select": "^3",
    "rimraf": "^3",
    "stylelint": "^13",
    "stylelint-config-sass-guidelines": "^7",
    "stylelint-config-standard": "^20",
    "tsdx": "^0.13.0",
    "tslib": "^1",
    "typescript": "^3"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/__fixtures__/",
      "/src/@types",
      "/src/index.ts"
    ],
    "moduleDirectories": [
      "src",
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.ts",
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.ts"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
