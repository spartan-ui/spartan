{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-sass-guidelines"
  ],
  "rules": {
    "max-nesting-depth": 2,
    "selector-class-pattern": "^(([a-z][a-z0-9]*)(-[a-z0-9]+)*)|([a-z][a-zA-Z0-9]+)$",
    "selector-max-id": 1,
    "selector-pseudo-class-no-unknown": [true, {
      "ignorePseudoClasses": ["global"]
    }]
  }
}
